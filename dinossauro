        .game {
            position: relative;
            width: 600px;
            height: 200px;
            border: 2px solid black;
            margin: 50px auto;
            overflow: hidden;
            background-color: #f4f4f4;
        }
        #dino {
            width: 40px;
            height: 40px;
            background-color: green;
            position: absolute;
            bottom: 0;
            left: 50px;
        }
        .obstacle {
            width: 30px;
            height: 30px;
            background-color: brown;
            position: absolute;
            bottom: 0;
            right: -30px;
            animation: moveObstacle 2s linear infinite;
        }
        @keyframes moveObstacle {
            from { right: -30px; }
            to { right: 600px; }
        }
        .jump {
            animation: jump 0.6s ease-out;
        }
        @keyframes jump {
            0% { bottom: 0; }
            50% { bottom: 100px; }
            100% { bottom: 0; }
        }
        #gameOver {
            display: none;
            font-size: 24px;
            font-weight: bold;
            color: red;
        }
    </style>
